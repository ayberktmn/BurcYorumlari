<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".YorumActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="188dp"
                android:layout_height="187dp"
                android:layout_marginStart="112dp"
                android:layout_marginEnd="81dp"
                android:background="@color/black"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:background="@color/black"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/BurcText"
                android:layout_width="188dp"
                android:layout_height="52dp"
                android:layout_marginStart="110dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="112dp"
                android:gravity="center"
                android:hint="Burç"
                android:textColor="#0B2BDD"
                android:textColorHighlight="#EDEDED"
                android:textColorHint="#F3F0F0"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/titleText"
                android:layout_width="162dp"
                android:layout_height="65dp"
                android:layout_marginStart="125dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="142dp"
                android:gravity="center"
                android:text="Burç özelliği"
                android:textColor="#FAF9F9"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BurcText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Burç Yorumu :"
                    android:textColor="#C57705"
                    android:textSize="26sp" />


            </LinearLayout>
            <TextView
                android:id="@+id/YorumText"
                android:layout_width="390dp"
                android:layout_height="408dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:hint="Burç Yorumu"
                android:textColor="#FBFBFB"
                android:textColorHint="#F4F4F4"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias="0.983" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>