<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="122dp"
        android:layout_height="106dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:elevation="0dp"
        app:cardCornerRadius="16dp">


        <ImageView
            android:id="@+id/posterView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:onClick="film"
            android:src="@drawable/burclarrrr" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recyclerViewTextView"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:text="Test"
            android:textColor="#36048F"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/recyclerViewTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Detaylar için Tıklayınız"
            android:textColor="#9A8C0D"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>